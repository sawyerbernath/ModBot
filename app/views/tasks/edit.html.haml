%h2 Edit Task

= form_tag task_path(@task), :method => :put do

  = label :task, :task_type_id, 'Task Type'
  = select :task, :task_type_id, @tasktypes

  = label :task, :quantity, 'Quantity'
  = text_field :task, :quantity
 
  = label :task, :notes, 'Notes'
  = text_field :task, :notes

  = label :task, :passed, 'Passed'
  = text_field :task, :passed

  = label :task, :failed, 'Failed'
  = text_field :task, :failed
  %br
  %br
  = submit_tag 'Submit'
