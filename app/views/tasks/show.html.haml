%h2 Task #{@task.id}: #{@task.task_type.name}

%ul#details
  %li
    Quantity:
    = @task.quantity
  %li
    Notes:
    = @task.notes
  %li
    Status:
    = @task.status
  %li
    Status Date:
    = @task.updated_at.strftime("%l:%M%p %B %d, %Y")
  %li
    Elf Assigned:
    = link_to "#{@task.elf.name}", elf_path(@task.elf)
  %li
    Passed:
    = @task.passed
  %li
    Failed:
    = @task.failed

= link_to 'Edit', edit_task_path(@task)
%br
= button_to 'Delete', task_path(@task), :method => :delete, :confirm => 'Are you sure?'
= link_to "Task type: #{@task.task_type.name}", task_type_path(@task.task_type)
%br
= link_to 'Back to task list', tasks_path
