%h2 #{@elf.name}

%ul#details
  %li
    Tasks:
    %br
    - @elf_links.each do |l|
      = link_to l[0], l[1]
      %br
  %li
    Created:
    = @elf.created_at.strftime("%l:%M%p %B %d, %Y")
  %li
    Updated:
    = @elf.updated_at.strftime("%l:%M%p %B %d, %Y")

= link_to 'Edit', edit_elf_path(@elf)
%br
= button_to 'Delete', elf_path(@elf), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to elves list', elves_path
